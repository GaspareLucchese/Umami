<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <CheckBox
        android:id="@+id/selezione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/plate_izu_oshima_a_dishes_my_japanese_home_264"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/selezione"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome Oggetto"
        android:textSize="21.5sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/prezzo"
        app:layout_constraintBottom_toTopOf="@id/prezzo"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/prezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EUR 000.00"
        android:textSize="18sp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/descrizione"
        app:layout_constraintEnd_toStartOf="@id/eliminaCart"
        android:layout_marginStart="40dp"/>

    <Button
        android:fontFamily="@font/alongsanss2_semibold"
        android:id="@+id/eliminaCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELIMINA"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/prezzo"
        app:layout_constraintTop_toTopOf="@id/prezzo"
        app:layout_constraintBottom_toBottomOf="@id/prezzo"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>