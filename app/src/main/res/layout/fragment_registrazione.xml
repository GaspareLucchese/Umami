<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/logo"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/logo_cut"/>

                <TextView
                    android:fontFamily="@font/alongsanss2_extrabold"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UMAMI"
                    android:textSize="35sp"
                    android:layout_gravity="center"/>


            </LinearLayout>



            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textColor="@color/red"
                android:id="@+id/registrazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRATI"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOME"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registrazione"
                />

            <EditText
                android:id="@+id/nomeInserito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:id="@+id/cognome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COGNOME"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nomeInserito"/>

            <EditText
                android:id="@+id/cognomeInserito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cognome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cognomeInserito"
                />

            <EditText
                android:id="@+id/emailInserita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:id="@+id/indirizzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDIRIZZO DI CONSEGNA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailInserita"/>

            <EditText
                android:id="@+id/indirizzoInserito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/indirizzo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/indirizzoInserito"/>


            <EditText
                android:inputType="textPassword"
                android:id="@+id/passwordInserita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:id="@+id/confermaPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFERMA PASSWORD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordInserita"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/confermaPasswordInserita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/confermaPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/avanti_btn"
                android:textSize="17sp"
                android:layout_marginHorizontal="30dp"/>

            <Button
                android:fontFamily="@font/alongsanss2_semibold"
                android:textSize="17sp"
                android:layout_marginVertical="50dp"
                android:background="@drawable/bottone"
                android:id="@+id/avanti_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/confermaPasswordInserita"
                app:layout_constraintEnd_toEndOf="@id/confermaPasswordInserita"
                app:layout_constraintTop_toBottomOf="@id/confermaPasswordInserita"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="AVANTI"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>